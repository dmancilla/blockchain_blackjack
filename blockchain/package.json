{
  "name": "hardhat-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate to create EVM based smart contracts",
  "main": "index.js",
  "author": "Carlos Cosming",
  "license": "MIT",
  "private": true,
  "scripts": {
    "deploy:local": "npx hardhat run --network localhost scripts/deploy.ts",
    "localnode": "npx hardhat node",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile --force",
    "full-test": "npx hardhat clean && npx hardhat compile && npx hardhat test"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^1.0.1",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.2",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.7.21",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "dotenv": "^16.0.1"
  }
}
